{
    "name": "nails/common",
    "keywords": [
        "Nails",
        "Shed Collective",
        "CodeIgniter"
    ],
    "homepage": "http://nailsapp.co.uk",
    "description": "Nails is a framework for CodeIgniter designed to make building interactive web applications fast.",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        },
        {
            "name": "Gary Duncan",
            "email": "g@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "ext-fileinfo": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "adrienrn/php-mimetyper": "0.*",
        "annexare/countries-list": "2.*",
        "axisofstevil/stop-words": "0.*",
        "behat/transliterator": "1.*",
        "codeigniter/framework": "3.1.11",
        "defuse/php-encryption": "2.*",
        "guzzlehttp/guzzle": "6.*",
        "mustache/mustache": "2.*",
        "pimple/pimple": "3.*",
        "ralouphie/getallheaders": "3.*",
        "symfony/mime": "5.*"
    },
    "require-dev": {
        "phpunit/phpunit": "8.*"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "Nails\\": "src/",
            "Nails\\Common\\": "src/Common/"
        }
    },
    "extra": {
        "nails": {
            "moduleName": "common",
            "type": "module",
            "namespace": "Nails\\Common\\",
            "autoload": {
                "services": [
                    "ErrorHandler"
                ],
                "helpers": [
                    "app_setting",
                    "array",
                    "cookie",
                    "date",
                    "debug",
                    "directory",
                    "email",
                    "exception",
                    "form",
                    "form_field",
                    "html",
                    "language",
                    "log",
                    "logo",
                    "string",
                    "text",
                    "tools",
                    "typography",
                    "url"
                ]
            },
            "data": {
                "nails/module-cdn": {
                    "permitted-image-dimensions": [
                        "35x35"
                    ]
                }
            }
        }
    }
}
