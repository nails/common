{
    "name": "nailsapp/common",
    "keywords": ["Nails","Shed Collective","CodeIgniter"],
    "homepage": "http://nailsapp.co.uk",
    "description": "Nails is a framework for CodeIgniter designed to make building interactive web applications fast.",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        },
        {
            "name": "Gary Duncan",
            "email": "g@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require":
    {
        "codeigniter/framework": "3.1.7",
        "pimple/pimple": "3.*",
        "guzzlehttp/guzzle": "6.*",
        "mustache/mustache": "2.*",
        "behat/transliterator": "^1.2",
        "nailsapp/module-admin": "dev-develop",
        "nailsapp/module-asset": "dev-develop",
        "nailsapp/module-email": "dev-develop",
        "nailsapp/module-event": "dev-develop",
        "nailsapp/module-console": "dev-develop",
        "nailsapp/driver-error-handler-default": "dev-develop"
    },
    "require-dev":
    {
        "phpunit/phpunit": "4.*"
    },
    "autoload":
    {
        "psr-4": {"Nails\\": "src/"}
    },
    "extra": {
        "nails": {
            "autoload": {
                "helpers": [
                    "string",
                    "array",
                    "app_setting",
                    "app_notification",
                    "date",
                    "url",
                    "cookie",
                    "form",
                    "html",
                    "tools",
                    "debug",
                    "language",
                    "text",
                    "exception",
                    "typography",
                    "log"
                ]
            }
        }
    }
}
